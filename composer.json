{
    "name": "johmanx10/transaction",
    "description": "Handles operations with automatic rollback mechanisms.",
    "keywords": [
        "transaction",
        "rollback",
        "commit"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jan-Marten de Boer",
            "email": "github@johmanx.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "ext-SPL": "@stable",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "ext-xdebug": "@stable",
        "phpunit/phpunit": "@stable",
        "phpro/grumphp": "@stable",
        "phpstan/phpstan": "@stable",
        "php-parallel-lint/php-parallel-lint": "@stable",
        "symfony/console": "@stable",
        "symfony/event-dispatcher": "@stable"
    },
    "suggest": {
        "symfony/event-dispatcher": "To apply the logging event subscriber implementation."
    },
    "autoload": {
        "psr-4": {
            "Johmanx10\\Transaction\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Johmanx10\\Transaction\\Tests\\": "tests",
            "Johmanx10\\Transaction\\Examples\\": "examples/src"
        }
    },
    "archive": {
        "exclude": [
            "/.gitattributes",
            "/.github",
            "/.gitignore",
            "/docs",
            "/examples",
            "/grumphp.yml",
            "/make",
            "/Makefile",
            "/phpcs.xml",
            "/phpmd.xml",
            "/phpstan.neon",
            "/phpunit.xml",
            "/tests"
        ]
    },
    "config": {
        "sort-packages": true,
        "platform-check": true
    }
}
