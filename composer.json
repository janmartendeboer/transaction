{
    "name": "johmanx10/transaction",
    "description": "Handles operations with automatic rollback mechanisms.",
    "keywords": [
        "transaction",
        "rollback",
        "commit"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jan-Marten de Boer",
            "email": "github@johmanx.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "ext-SPL": "@stable",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "ext-xdebug": "@stable",
        "phpunit/phpunit": "@stable",
        "phpro/grumphp": "@stable",
        "phpmd/phpmd": "@stable",
        "phpstan/phpstan": "@stable",
        "php-parallel-lint/php-parallel-lint": "@stable",
        "squizlabs/php_codesniffer": "^3.5.0",
        "symfony/console": "@stable",
        "symfony/event-dispatcher": "@stable"
    },
    "autoload": {
        "psr-4": {
            "Johmanx10\\Transaction\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Johmanx10\\Transaction\\Tests\\": "tests"
        }
    },
    "archive": {
        "exclude": [
            "/.gitignore",
            "/phpunit.xml",
            "/phpmd.xml",
            "/phpstan.neon",
            "/phpcs.xml",
            "/examples",
            "/tests",
            "/.gitattributes",
            "/grumphp.yml"
        ]
    },
    "config": {
        "sort-packages": true,
        "platform-check": true
    }
}
